<% include partials/header %>

<div class="container">
    <div class="row">
        <div>
            <h1 style="text-align:center">Place order</h1>
        </div>
        <div style="width:30%; margin: 0 auto;">
            <form action="/placeorder" method="POST">
                <div class="form-group">
                    <input class="form-group" type="text" name="detail" placeholder="Company details">
                </div>
                <div class="form-group">
                    <input class="form-group" type="text" name="count" placeholder="Share count">
                </div>
                <div class="form-group">
                    <input class="form-group" type="text" name="price" placeholder="Share price">
                </div>
                <div class="form-group">
                    <input class="form-group" type="text" name="company" placeholder="Company name">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
                <div class="form-group"><a href="/">Go back</a></div>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>